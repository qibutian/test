<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:src="@drawable/icon_sad" />

    <TextView
        style="@style/text_66_blacklight_medium"
        android:layout_marginTop="11dp"
        android:text="很抱歉,没有搜索到您想要的结果!" />

    <TextView
        style="@style/text_99_greylight_small"
        android:layout_marginTop="10dp"
        android:text="看看输入的文字是否有误" />

    <TextView
        style="@style/text_99_greylight_small"
        android:layout_marginTop="3dp"
        android:text="试试去掉可能不必要的字词来扩大筛选范围" />

    <Button
        android:id="@+id/search_again"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_yellow_bg"
        android:text="重新搜索"
        android:textColor="@color/text_yellow"
        android:textSize="@dimen/text_big" />

    <TextView
        style="@style/text_99_greylight_small"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/nav_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="特色推荐 | Feature Recommended" />

</LinearLayout>